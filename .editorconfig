# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab

[*.js]
indent_style = space
indent_size = 2
end_of_line = crlf

[*.{html,py,js}]
charset = utf-8

[*.html]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
line_length = 120
multi_line_output = 3

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
root = true
